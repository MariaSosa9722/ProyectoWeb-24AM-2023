@model ProyectoWeb_24AM_2023.Models.Entities.Usuario

@{
    Layout = "_LayoutDashboard";
}

<div class="container-fluid">
    <div class="col-sm-8">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Crear usuario</strong></h1>

            </div>

            <div class="card-body">

                <form asp-action="Crear" method="post">

                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" required />

                    </div>

                    <div class="form-group">
                        <label asp-for="Apellido" class="control-label"></label>
                        <input asp-for="Apellido" class="form-control" placeholder="Ingresa el apelllido" required />

                    </div>

                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" placeholder="Ingresa el usuario" required />

                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Ingresa el password" required />

                    </div>
                    <div class="form-group">
                        <label asp-for="FkRol" class="control-label"></label>
                        <input asp-for="FkRol" class="form-control" placeholder="Ingresa el descripción" required />

                    </div>


                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-secondary d-block mx-auto"><i class="bi bi-person-fill"></i> Guardar</button>
                    </div>

                </form>

                <a asp-controller="Articulo" asp-action="Index">Volver</a>


            </div>


        </div>


    </div>




</div>
